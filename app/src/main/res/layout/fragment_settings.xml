<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply_changes_button"
        style="@style/DefaultButton"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/apply_changes"
        app:layout_constraintEnd_toEndOf="@id/name_weight_layout"
        app:layout_constraintStart_toStartOf="@id/name_weight_layout"
        app:layout_constraintTop_toBottomOf="@+id/name_weight_layout" />

    <include
        android:id="@+id/name_weight_layout"
        layout="@layout/name_weight_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>